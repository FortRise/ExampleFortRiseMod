    <ModZipPath>..\release\$(ModName)-$(ModVersion).zip</ModZipPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FortRise.Configuration" Version="1.3.1" />
  </ItemGroup>
</Project>